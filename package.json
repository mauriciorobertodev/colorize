{
    "name": "@mauricioroberto/colorize",
    "description": "An simple package to paint strings with ANSI codes",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mauriciorobertodev/colorize.git"
    },
    "keywords": [
        "colorize",
        "mauricioroberto",
        "ANSI",
        "console.log",
        "console",
        "paint",
        "color"
    ],
    "author": "Mauricio Roberto",
    "private": false,
    "version": "0.0.3",
    "type": "module",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/mauriciorobertodev/colorize/issues"
    },
    "homepage": "https://github.com/mauriciorobertodev/colorize#readme",
    "main": "./dist/colorize.umd.cjs",
    "module": "./dist/colorize.js",
    "types": "./dist/main.d.ts",
    "exports": {
        "types": "./dist/main.d.ts",
        "import": "./dist/colorize.js",
        "require": "./dist/colorize.umd.cjs"
    },
    "scripts": {
        "dev": "tsx test/unit.ts && tsx test/builder.ts",
        "test:unit": "tsx test/unit.ts",
        "test:builder": "tsx test/builder.ts",
        "build": "tsc && vite build",
        "lint": "eslint --fix .",
        "style": "prettier --config .prettierrc --write ."
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.4",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vite-plugin-dts": "^3.7.2"
    },
    "dependencies": {
        "@mauricioroberto/colorize": "^0.0.2"
    }
}
